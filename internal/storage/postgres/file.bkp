package postgres

import (
	"context"

	"github.com/NevostruevK/GophKeeper/internal/models"
	"github.com/google/uuid"
)

func (s *Storage) AddFile(ctx context.Context, f *models.File, r *models.Record, d *models.Description) (uuid.UUID, error) {
	return s.AddData(ctx, f, r, d)
}

func (s *Storage) GetFile(ctx context.Context, r *models.Record) (*models.File, error) {
	d, err := s.GetData(ctx, r)
	if err != nil {
		return nil, err
	}
	f := &models.File{}
	err = f.Decode(d)
	return f, err
}
